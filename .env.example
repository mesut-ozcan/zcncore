# --- Application ---
APP_ENV=local
APP_DEBUG=true
APP_URL=http://zcncore.local
APP_KEY=base64:CHANGE_ME

# --- Database (PDO) ---
DB_HOST=127.0.0.1
DB_NAME=zcncore
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# --- Cache & Log ---
CACHE_DRIVER=file
LOG_CHANNEL=file

# --- SEO / URL ---
THEME=default
CANONICAL_HOST=
TRAILING_SLASH=none   # none|add

# --- Session ---
SESSION_DRIVER=file    # file|database
SESSION_LIFETIME=120   # minutes
SESSION_COOKIE=zcn_session
SESSION_SAMESITE=Lax   # Lax|Strict|None
SESSION_SECURE=false   # true on HTTPS

# --- Queue ---
QUEUE_DRIVER=file

# --- Mail (Notifier) ---
# Notifier varsayılan olarak PHP mail() kullanır.
# mail() yoksa log'a [MAIL-FAKE] düşer; burada ayar yoksa sorun değildir.
# İstersen header'larda kullanmak üzere bir from bilgisi tanımlayabilirsin:
# MAIL_FROM="ZCNCore <no-reply@localhost>"
